{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "prosemirror-suggestion-mode/*": ["src/*"],
      "prosemirror-suggestion-mode": ["src"]
    },
    "rootDir": "."
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules"]
}
