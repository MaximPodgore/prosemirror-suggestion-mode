{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "prosemirror-suggest-mode/*": ["src/*"],
      "prosemirror-suggest-mode": ["src"]
    }
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules"]
}
